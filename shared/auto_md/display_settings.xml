<display-settings>

  <!-- Use physical port number instead of local id -->
  <config identifier="1" />

  <!-- Display settings for cluster -->
  <display name="port:1"
      forcedDensity="120"
      dontMoveToTop="true"/>

  <!-- Display settings for 1st passenger display / 2nd Home -->
  <display name="port:2"
      shouldShowSystemDecors="true"
      shouldShowIme="true"
      forcedDensity="120" />

  <!-- Display settings for 2nd passenger display / 3rd Home -->
  <display name="port:3"
      shouldShowSystemDecors="true"
      shouldShowIme="true"
      forcedDensity="120" />

</display-settings>
