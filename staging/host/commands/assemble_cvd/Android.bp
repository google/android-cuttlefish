cc_library {
    name: "libcdisk_spec",
    srcs: [
        "cdisk_spec.proto",
    ],
    proto: {
        type: "full",
        export_proto_headers: true,
        include_dirs: [
            "external/protobuf/src",
        ],
    },
    defaults: ["cuttlefish_host_and_guest"],
}

cc_binary {
    name: "assemble_cvd",
    srcs: [
        "assemble_cvd.cc",
        "boot_config.cc",
        "boot_image_unpacker.cc",
        "disk_flags.cc",
        "flags.cc",
        "image_aggregator.cc",
        "misc_info.cc",
        "super_image_mixer.cc",
    ],
    header_libs: [
        "bootimg_headers",
    ],
    shared_libs: [
        "libcuttlefish_fs",
        "libcuttlefish_utils",
        "libbase",
        "libjsoncpp",
        "libnl",
        "libprotobuf-cpp-full",
        "libxml2",
        "libziparchive",
        "libz",
        "libcuttlefish_allocd_utils",
    ],
    static_libs: [
        "libcdisk_spec",
        "libext2_uuid",
        "libsparse",
        "libcuttlefish_host_config",
        "libcuttlefish_vm_manager",
        "libgflags",
    ],
    defaults: ["cuttlefish_host_and_guest", "cuttlefish_libicuuc"],
}
