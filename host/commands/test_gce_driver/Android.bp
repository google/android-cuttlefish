package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_binary {
    name: "cvd_test_gce_driver",
    srcs: [
        "cvd_test_gce_driver.cpp",
        "gce_api.cpp",
        "key_pair.cpp",
        "scoped_instance.cpp",
    ],
    static_libs: [
        "libcuttlefish_web",
        "libcuttlefish_host_config",
        "libcuttlefish_test_gce_proto_cpp",
        "libgflags",
    ],
    target: {
        host: {
            stl: "libc++_static",
            static_libs: [
                "libbase",
                "libcuttlefish_fs",
                "libcuttlefish_utils",
                "libcurl",
                "libcrypto",
                "libext2_uuid",
                "liblog",
                "libssl",
                "libz",
                "libjsoncpp",
                "libprotobuf-cpp-full",
            ],
        },
        android: {
            shared_libs: [
                "libbase",
                "libcuttlefish_fs",
                "libcuttlefish_utils",
                "libcurl",
                "libcrypto",
                "libext2_uuid",
                "liblog",
                "libssl",
                "libz",
                "libjsoncpp",
                "libprotobuf-cpp-full",
            ],
        },
    },
    defaults: ["cuttlefish_host"],
}

cc_library_static {
    name: "libcuttlefish_test_gce_proto_cpp",
    proto: {
        export_proto_headers: true,
        type: "full",
    },
    srcs: ["test_gce_driver.proto"],
    defaults: ["cuttlefish_host"],
}

java_library_host {
    name: "libcuttlefish_test_gce_proto_java",
    proto: {
        type: "full",
    },
    srcs: ["test_gce_driver.proto"],
}
